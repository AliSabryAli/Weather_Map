<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_huge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/tvTempId"
                style="@style/LargeText"
                android:layout_width="@dimen/card_large"
                android:layout_height="@dimen/card_normal"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="11C" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/card_small"
                android:layout_height="@dimen/card_small"
                android:layout_above="@id/tvCityNameId"
                android:layout_below="@id/tvTempId"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/spacing_huge"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgWeatherStateId"
                android:layout_width="@dimen/card_small"
                android:layout_height="@dimen/card_small"
                android:layout_below="@id/tvTempId"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvcloudsId"
                style="@style/SmallNormalText"
                android:layout_width="@dimen/card_normal"
                android:layout_height="@dimen/card_small"
                android:layout_above="@id/tvCityNameId"
                android:layout_below="@id/tvTempId"
                android:layout_toRightOf="@id/imgWeatherStateId"
                android:gravity="center"
                android:text="4C" />

            <TextView
                android:id="@+id/tvCityNameId"
                style="@style/MedText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgWeatherStateId"
                android:gravity="center|start"
                android:text="city Name" />

            <TextView
                android:id="@+id/tvDateId"
                style="@style/DateText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_tall"
                android:layout_toRightOf="@id/tvTempId"
                android:gravity="center"
                android:text="22 apr" />

            <TableLayout
                android:id="@+id/tableId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tvCityNameId"
                android:layout_below="@id/tvDateId"
                android:layout_toRightOf="@id/tvTempId"
                android:paddingLeft="@dimen/spacing_normal"
                android:weightSum="3">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTitle2Id"
                        style="@style/SmallBoldText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/wind" />

                    <TextView
                        android:id="@+id/tvWindId"
                        style="@style/SmallNormalText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11.5KM" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTitle3Id"
                        style="@style/SmallBoldText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/humidity" />

                    <TextView
                        android:id="@+id/tvHumidityId"
                        style="@style/SmallNormalText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="40%" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/SmallBoldText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/pressure" />

                    <TextView
                        android:id="@+id/tvPressureId"
                        style="@style/SmallNormalText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11KA" />
                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:listitem="@layout/day_row" />
</android.support.constraint.ConstraintLayout>