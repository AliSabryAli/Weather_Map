<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_tall"
        app:cardBackgroundColor="@color/colorSecondaryLight"
        app:cardCornerRadius="@dimen/spacing_tiny"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_small">

            <TextView
                android:id="@+id/tvCardDateId"
                style="@style/CardText"
                android:layout_width="@dimen/card_large"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Today 1 APr" />

            <ImageView
                android:id="@+id/imgCardImageId"
                android:layout_width="@dimen/card_normal"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tvCardDateId"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvCardTempId"
                style="@style/CardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgCardImageId"
                android:gravity="center"
                android:text="11c" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>