<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--City Label Text-->
    <style name="MedText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/city_txt_shape</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <!--Temp -->
    <style name="LargeText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>
    <!--Details text-->
    <style name="SmallNormalText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallBoldText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--Card Text-->
    <style name="CardText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Date -->
    <style name="DateText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>
</resources>